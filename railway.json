{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "node index.js",
    "healthcheckPath": "/status",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE"
  }
}
